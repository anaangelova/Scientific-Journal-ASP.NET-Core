@model List<ScientificJournal.Domain.DomainModels.Conference>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="m-3">
		<a class="btn btn-success" asp-controller="Conference" asp-action="AddConference">Add new Conference</a>
	</div>

	@for (int i = 0; i < Model.Count; i++)
	{
		var item = Model[i];

		if (i % 3 == 0)
		{
			@:<div class="row">
			}


			<div class="col-md-3 m-4">
				<div class="card" style="width: 18rem; height: 30rem;">
					<img class="card-img-top" src="@item.ConferenceImage" style="height: 50%" alt="Image for conference!" />

					<div class="card-body">
						<h3 class="card-title">@item.ConferenceName</h3>
						<p class="card-text">@item.Date</p>

						<h6>Price: @item.Price</h6>
					</div>

					@*<div class="card-footer">

						<a asp-controller="Paper" asp-action="DeleteConference" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
						<a asp-controller="Paper" asp-action="EditConference" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>

					</div>*@
				</div>
			</div>



			if (i % 3 == 2)
			{
			@:</div>
		}
	}

</div>