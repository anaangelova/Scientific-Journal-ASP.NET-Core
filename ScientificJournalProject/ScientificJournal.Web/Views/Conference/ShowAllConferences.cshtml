@model List<ScientificJournal.Domain.DomainModels.Conference>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

	@for (int i = 0; i < Model.Count; i++)
	{
		var item = Model[i];

		if (i % 3 == 0)
		{
			@:<div class="row">
			}


			<div class="col-md-3 m-4">
				<div class="card" style="width: 18rem; height: 30rem;">
					<img class="card-img-top" src="@item.ConferenceImage" style="height: 50%" alt="Image for conference!" />

					<div class="card-body">
						<h3 class="card-title">@item.ConferenceName</h3>
						<p class="card-text">@item.Date.ToString("g", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</p>

						<h6>Price: @item.Price</h6>
					</div>
					<div class="card-footer">
						<a asp-action="Details" asp-controller="Conference" asp-route-id="@item.Id" asp-route-flag="1" asp-route-prev="Index" class="btn font-weight-normal px-4" style="background-color: deepskyblue; color: whitesmoke;">Details</a>
					</div>

					@*<div class="card-footer">

			<a asp-controller="Paper" asp-action="DeleteConference" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
			<a asp-controller="Paper" asp-action="EditConference" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>

		</div>*@
				</div>
			</div>



			if (i % 3 == 2)
			{
			@:</div>
		}
	}

</div>