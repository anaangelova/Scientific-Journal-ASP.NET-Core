@using Microsoft.AspNetCore.Identity
@inject SignInManager<ScientificJournal.Domain.Identity.ScienceUser> SignInManager
@inject UserManager<ScientificJournal.Domain.Identity.ScienceUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-family: 'Fira Sans Condensed', sans-serif; font-size: 1.3vw;">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Paper", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-light" style="font-family: 'Fira Sans Condensed', sans-serif; font-size: 1.3vw;" >Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-light font-weight-bold" asp-controller="Account" asp-action="Register" style="font-family: 'Fira Sans Condensed', sans-serif; font-size: 1.3vw;">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-light font-weight-bold" asp-controller="Account" asp-action="Login" style="font-family: 'Fira Sans Condensed', sans-serif; font-size: 1.3vw;">Login</a>
    </li>
}
</ul>
