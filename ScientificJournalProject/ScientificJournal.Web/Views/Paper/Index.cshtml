@model ScientificJournal.Domain.DTO.PapersConferencesDTO
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
	<meta charset="utf-8">
	<link rel="stylesheet">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
	<div>
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height: 350px">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="https://researchleap.com/wp-content/uploads/2014/09/7423997002_4d7c3cd9ef_h-1078x516.jpg" style="height: 350px" class="d-block w-100" alt="...">
					<div class="carousel-caption d-none d-md-block">
						<h1 class="h1 mb-0 " style="color: teal; font-size:8rem; opacity: 70%; font-family: Gabriola; letter-spacing:0.3rem;">Scientific Journal</h1>
						<h4 class="h2 font-weight-bold" style="color: lightseagreen; font-family: Gabriola; font-size: 2.8rem; letter-spacing: 0.2rem; ">Find the latest published papers and conferences here!</h4>
					</div>
				</div>
				<div class="carousel-item">
					<img src="https://www.rantannamedia.com/wp-content/uploads/2019/11/books-bw-1-1600x900.jpg" style="height:350px" class="d-block w-100" alt="...">
					<div class="carousel-caption d-none d-md-block">
						<h1 class="h1 mb-0 " style="color: gold; font-size:8rem; opacity: 70%; font-family: Gabriola; letter-spacing:0.3rem;">Scientific Journal</h1>
						<h4 class="h2 font-weight-bold" style="color: goldenrod; font-family: Gabriola; font-size: 2.8rem; letter-spacing: 0.2rem; ">Find the latest published papers and conferences here!</h4>
					</div>
				</div>
				<div class="carousel-item">
					<img src="http://tiedonhinta.fi/wp-content/uploads/sites/58/2020/04/Transformation-in-Science-Publishing-1.jpg" style="height: 350px" class="d-block w-100" alt="...">
					<div class="carousel-caption d-none d-md-block">
						<h1 class="h1 mb-0 " style="color: darkred; font-size:8rem; opacity: 70%; font-family: Gabriola; letter-spacing:0.3rem;">Scientific Journal</h1>
						<h4 class="h2 font-weight-bold" style="color: darkred; font-family: Gabriola; font-size: 2.8rem; letter-spacing: 0.2rem; ">Find the latest published papers and conferences here!</h4>
					</div>
				</div>

			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
		<!-- Left and right controls -->
		<a class="left carousel-control" href="#myCarousel" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#myCarousel" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<br />
	<div>
		<div class="container">
			<div style="color: darkolivegreen;" class="h2">All Research Papers</div>
			<hr />
			@for (int i = 0; i < Model.Papers.Count; i++)
			{
				var item = Model.Papers[i];
				if (i % 3 == 0)
				{

					@:<div class="row">
					}

					<div class="col-md-12 m-4">
						<div class="card" style="width:55rem; height:24rem">

							<div class="card-body">
								<h5 class="card-title font-weight-bolder h4">@item.Title</h5>
								<p class="card-text font-italic h5" style="color: indigo;">Area of Research: @item.AreaOfResearch</p>
								<p class="card-text pt-3" style="text-align:justify;">@item.Abstract</p>
							</div>
							<div class="card-footer">
								<a asp-action="Details" asp-controller="Paper" asp-route-id="@item.Id" asp-route-flag="1" asp-route-prev="Index" class="btn btn-warning text-white font-weight-normal" >More details</a>
							</div>

						</div>
					</div>

					if (i % 3 == 2)
					{
					@:</div>
				}

			}
		</div>
	</div>
	<br />
	<div>
		<div class="container mb-3">
			<div style="color: darkolivegreen;" class="h2 mb-0">Latest Conferences</div>
			<hr class="mt-0" />

			@for (int i = 0; i < Model.Conferences.Count; i++)
			{
				var item = Model.Conferences[i];

				if (i % 4 == 0)
				{
					@:<div class="row">
					}

					<div class="col-md-3 m-3">
						<div class="card" style="width: 18rem; height: 28rem;">
							<img class="card-img-top" src="@item.ConferenceImage" style="height: 50%; width: 100%" alt="Image for product!" />

							<div class="card-body">
								<h5 class="card-title font-weight-bold">@item.ConferenceName</h5>
								<p class="card-text">@item.Date.ToString("g",System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))  </p>
								<h6>Price: @item.Price$</h6>
							</div>
							<div class="card-footer">
								<a asp-action="Details" asp-controller="Conference" asp-route-id="@item.Id" asp-route-flag="1" asp-route-prev="Index" class="btn font-weight-normal px-4" style="background-color: deepskyblue; color: whitesmoke;">Details</a>
							</div>

						</div>
					</div>

					if (i % 4 == 4)
					{
					@:</div>
				}
			}
		</div>
	</div>
</body>
