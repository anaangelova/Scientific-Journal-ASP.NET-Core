@model ScientificJournal.Domain.DTO.PaperDetailsDTO

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete paper</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>Product</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Paper.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Paper.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Paper.AreaOfResearch)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Paper.AreaOfResearch)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Keywords)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Keywords)
		</dd>
		
	</dl>

	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="Paper.Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="MyPapers" asp-controller="Paper" class="btn btn-secondary btn-sm">Back to List</a>
	</form>
</div>
